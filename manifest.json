{
  "manifest_version": 3,
  "version": "0.0.2",
  "name": "Every Dark",
  "description": "",
  "author": "Pedro Isac",
  "action": {
    "default_title": "Every Dark",
    "default_icon": "./icon.png"
  },
  "background": {
    "service_worker": "index.js"
  },
  "host_permissions": ["http://*/*", "https://*/*"],
  "permissions": ["tabs", "scripting", "storage"],
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "css": ["css/colors.css", "css/containers.css", "css/texts.css"]
    }
  ]
}
